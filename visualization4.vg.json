{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "forest area of the 10 largest countries",
  "background": "white",
  "padding": 5,
  "width": 520,
  "height": 260,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/TeoJieRu/Visualisation2/main/forest/use2.csv",
      "format": {
        "type": "csv",
        "parse": {"Country": "string"},
        "delimiter": ","
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum.Area*datum.Coverage/100",
          "as": "forest_area"
        },
        {"type": "filter", "expr": "datum.Year == Year_selection"},
        {
          "type": "filter",
          "expr": "indexof([\"Russia\",\"Canada\",\"China\",\"United States of America\",\"Brazil\",\"Australia\",\"India\",\"Argentina\",\"Kazakhstan\",\"Algeria\"], datum[\"Country\"]) !== -1"
        },
        {
          "type": "aggregate",
          "groupby": ["Country"],
          "ops": ["sum"],
          "fields": ["forest_area"],
          "as": ["sum_area"]
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["sum_area", "Country"],
          "ops": ["sum"],
          "fields": ["sum_area"],
          "as": ["sum_sum_area"]
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Year :"
      }
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": [
            {"test": "datum.sum_area >= 8000000 ", "value": "red"},
            {"value": "gray"}
          ],
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Forest Area (km2)\": format(datum[\"sum_sum_area\"], \".2d\")}"
          },
          "ariaRoleDescription": {"value": "bar"},
          "description": {
            "signal": "\"sum_area: \" + (format(datum[\"sum_area\"], \"\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Forest Area (km2): \" + (format(datum[\"sum_sum_area\"], \".2d\"))"
          },
          "x": [
            {
              "test": "!isValid(datum[\"sum_area\"]) || !isFinite(+datum[\"sum_area\"])",
              "value": 0
            },
            {"scale": "x", "field": "sum_area"}
          ],
          "x2": {"scale": "x", "value": 0},
          "y": {"scale": "y", "field": "Country"},
          "height": {"scale": "y", "band": 1}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "align": {"value": "left"},
          "baseline": {"value": "alphabetic"},
          "fontSize": {"value": 11.5},
          "fill": {"value": "black"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Forest Area (km2)\": format(datum[\"sum_sum_area\"], \".2d\")}"
          },
          "description": {
            "signal": "\"sum_area: \" + (format(datum[\"sum_area\"], \"\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; Forest Area (km2): \" + (format(datum[\"sum_sum_area\"], \".2d\"))"
          },
          "x": [
            {
              "test": "!isValid(datum[\"sum_area\"]) || !isFinite(+datum[\"sum_area\"])",
              "value": 0
            },
            {"scale": "x", "field": "sum_area"}
          ],
          "y": {"scale": "y", "field": "Country", "band": 0.5},
          "text": {"signal": "format(datum[\"sum_area\"], \".2d\")"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {"data": "data_0", "field": "sum_area"},
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "source_0",
        "field": "Country",
        "sort": {"op": "min", "field": "sum_area", "order": "descending"}
      },
      "range": [0, {"signal": "height"}],
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Forest Area (km2)",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Country",
      "zindex": 0
    }
  ],
  "config": {}
}